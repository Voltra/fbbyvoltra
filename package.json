{
  "name": "slim-vue-app",
  "version": "1.0.0",
  "description": "An application that uses Slim and Vue (with Twig)",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setupJS && npm run setupPHP",
    "setupJS": "npm install",
    "setupPHP": "composer update && composer dump-autoload",
    "build": "npm run postBuild && webpack",
    "watch": "npm run postBuild && webpack --watch",
    "setToDev": "cross-env NODE_ENV=dev",
    "setToProd": "cross-env NODE_ENV=production",
    "dev-build": "npm run setToDev && npm run build",
    "dev-watch": "npm run setToDev && npm run watch",
    "prod-build": "npm run setToProd && npm run build",
    "moveJqFlashToProduction": "npm run moveJqFlashJs && npm run moveJqFlashCss",
    "moveJqFlashJs": "cp node_modules/jq-flash/dist/flash.js public_html/assets/js/globals/jq-flash.js",
    "moveJqFlashCss": "cp node_modules/jq-flash/dist/flash.css public_html/assets/css/globals/",
    "moveJqueryToProduction": "cp node_modules/jquery/dist/jquery.min.js public_html/assets/js/globals/jquery.js",
    "postBuild": "npm run moveJqueryToProduction && npm run moveJqFlashToProduction",
    "postinstall": "npm run postBuild"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.5.0",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.17",
    "compass-mixins": "^0.12.10",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "img-loader": "^2.0.0",
    "mixin-loader": "^2.0.3",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.6.1",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.13",
    "vue2-animate": "^1.0.4",
    "webpack": "^3.10.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "dependencies": {
    "jq-flash": "^1.0.2",
    "jquery": "^3.2.1",
    "lodash.merge": "^4.6.0",
    "v-tooltip": "^2.0.0-rc.25",
    "vue": "^2.5.9"
  }
}
